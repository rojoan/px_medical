#parse("./common/common.js.vm")

<script>
   $(document).ready(function () {
   	$('#emHealthReportForm').find('input').attr('readonly',true);
   	$('#emHealthReportForm').find('input[type=radio],input[type=checkbox]').attr('disabled',true);
   });
</script>
<script>
        // 提交审核内容
        function saveEmHealthCheck() {
        	 var reportAuditParams = common.serializeObject($('#healthReportFormAudit'));
       
            if (reportAuditParams.checkOpinion == undefined || reportAuditParams.checkOpinion == "") {
                common.alert("请填写审核意见和建议",0);
                return false;
            }
            console.log(JSON.stringify(reportAuditParams));
            $.post("../emHealthReport/saveEmHealthCheck.do", reportAuditParams, function (result) {
                if (result.code == "0") {
                    $('#submitFlag').val("1");
                    $("#healthCheckId").val( result.data.healthCheckId);
                    common.alert("保存成功",0);
                    query();//重新查询
                } else {
                    common.alert("保存失败",0);
                    $('#submitFlag').val("");
                }
            }, "json");
        }
	    
       
</script>

