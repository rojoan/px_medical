	$(function() {
		
		//查询患者列表
		$('#applyTurnUpAuditGrid').bootstrapTable({
			url : "../gradingclinics/applyTurnUpAuditListData.do",
			mobileResponsive: true,
			pagination : true,
			pageNumber : true,
			cache : false,
			striped: true,
			clickToSelect: true,
			singleSelect: true,
			//method : "get",
			pageSize : "10",
			pageNumber : "1",
			height : "350",
			queryParams : function (params){
				var requestParams = common.serializeObject($('#patient_queryForm'));
		        requestParams.pageSize = params.pageSize;
		        requestParams.pageNumber = params.pageNumber;
		        return requestParams;
			},
			queryParamsType : "",
			sidePagination:'server',
			halign : "center",
			columns : [
			{
				checkbox : true
			},
			{
				field : 'patientName',
				title : '患者姓名'//,width : "100px"
			}, 
			{
				field : 'hdDiagnosisNum',
				title : '转诊单号'
			}, 
			{
				field : 'transStatus',
				title : '转诊状态',
				formatter :function (value, row, index) {
					//0：暂存 1：已申请待审核 2：已审核待接诊 3：已接诊待患者就诊 4：已到医院就诊 
					switch(value){
					case '0':
					  return '暂存';
					  break;
					case '1':
					  return '待审核';
					  break;
					case '2':
					  return '待接诊';
					  break;
					case '3':
					  return '待就诊';
					  break;
					case '4':
					  return '已就诊 ';
					  break; 
					default:
						 return ' ';
					}
				}
			}
			],
			onCheck:function(row){
				checkApply(row);//回显转诊单信息,加载右侧的患者信息和转诊单信息
		    },
			onLoadSuccess : function(){
