	<script type="text/javascript" src="../resource/js/plugins/datatimepicker/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>
	<!-- Bootstrap table -->
	<script src="../resource/js/plugins/bootstrap-table/bootstrap-table.min.js"></script>
